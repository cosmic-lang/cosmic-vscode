{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Cosmic",
	"patterns": [
        {
            "include": "#comments"
        },
		{
			"include": "#keywords"
		},
        {
            "include": "#operators"
        },
        {
            "include": "#constants"
        },
		{
			"include": "#strings"
		}
	],
    "foldingStartMarker": "{s*$",
    "foldingEndMarker": "^s*}",
	"repository": {
        "comments": {
            "name": "comment.cosmic",
            "patterns": [
                { "include": "#comment-line" },
                { "include": "#comment-block-doc" },
                { "include": "#comment-block" }
            ]
        },
        "comment-line": {
            "name": "comment.line.double-slash.cosmic",
            "begin": "(^[ \\t]+)?((//))",
            "end": "(?=^)"
        },
        "comment-block": {
            "name": "comment.block.cosmic",
            "begin": "/\\*",
            "end": "\\*/",
            "patterns": [
                { "include": "#comment-block-doc" },
                { "include": "#comment-block" }
            ]
        },
        "comment-block-doc": {
            "name": "comment.block.documentation.cosmic",
            "begin": "/\\*\\*(?!/)",
            "end": "\\*/",
            "patterns": [
                { "include": "#comment-block-doc" },
                { "include": "#comment-block" }
            ]
        },
		"keywords": {
			"patterns": [{
				"name": "keyword.control.cosmic",
				"match": "\\b(if|match|while|for|return|fn|record|union|trait|module|defer|inline|true|false|break|continue|and|or|not|else|as|when|any|use|from|const|let|var|pub|pri|mut|mov|loc|ctime|static|in)\\b"
			}]
		},
        "operators": {
        },
        "constants": {
        },
		"strings": {
			"name": "string.quoted.double.cosmic",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.cosmic",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.cosmic"
}
